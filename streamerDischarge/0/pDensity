FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      pDensity;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 -3 0 0 0 0 0];

internalField   uniform 1.e4;

boundaryField
{
    anode
    {
//		type				zeroGradient;


        type            	groovyBCFixedValue;
		valueExpression		"pDensityBoundaryCondition";
		value 				uniform 1.e4;
    }

    cathode
    {
/*		type					fixedValue;
		value					uniform 0.	*/


        type            	groovyBCFixedValue;
		valueExpression		"pDensityBoundaryCondition";
		value 				uniform 1.e4;
    }

    otherFaces
    {
        type            empty;
    }
}

